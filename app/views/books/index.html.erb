<header>
    <div class="header-content">
        <div class="header-content-inner">
          <div class="container">
            <div class="table-responsive">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Price</th>
                    <th>Show</th>
                    <th>Update</th>
                    <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <% @books.each do |book| %>
                  <tr>
                    <th scope="row">
                      <%= book.id %>
                    </th>
                    <td>
                      <%= book.title %>
                    </td>
                    <td>
                      <%= book.content %>
                    </td>
                    <td>
                      <%= book.price %>
                    </td>
                    <td>
                      <%= link_to "Show details", book_path(book) %>
                    </td>
                    <td>
                      <%= link_to "Update book", edit_book_path(book) %>
                    </td>
                    <td>
                      <%= link_to "Delete book", book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>

            <div style="width:100%">
              <div id="map" style='width: 100%; height: 400px;'></div>
            </div>

            <%= link_to "Create New Book", new_book_path %>

            <% content_for :full_js do %>
              <script src="//maps.google.com/maps/api/js?key=AIzaSyA0HdmhzVt5u8-luM0E6JlFRAZimQA6eb4" data-turbolinks-eval=false></script>
              <script>
                var initializeMap = function() {
                  var handler;
                  handler = Gmaps.build("Google");
                  handler.buildMap({
                    provider: {
                      //maxZoom: 15,
                      //minZoom: 10
                      Zoom: 2
                    },
                    internal: {
                      id: "map"
                    }
                  }, function() {
                    <% @books.each do |book| %>
                    var markers;
                    //alert("<%= book.latitude %>")
                    markers = handler.addMarkers([
                      {
                        lat: <%= book.latitude %>,
                        lng: <%= book.longitude %>,
                        infowindow: "holla"
                      }
                    ]);
                    <% end %>
                    //handler.bounds.extendWith(markers);
                    //handler.fitMapToBounds();
                  });
                };

                initializeMap();
              </script>
            <% end %>
          </div>
        </div>
    </div>
</header>
